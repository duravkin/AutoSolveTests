{
    "manifest_version": 3,
    "name": "AI Radio Button Helper",
    "version": "0.3",
    "description": "Расширение для автоматизации работы на странице с тестированием (помощник ИИ)",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "host_permissions": [
        "http://localhost:5000/*"
    ]
}